<resources>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
    </style>

   <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:imeActionId">6</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/mlr_bottom_sheet_corner</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_settings_change">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/tv_settings</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Rounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>


    <style name="RecordButton" parent="Widget.App.Button.IconOnly">
        <item name="iconTint">@drawable/states_recorderbutton</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Rounded</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="iconSize">52dp</item>
    </style>

    <style name="RecordButton.NoElevation" parent="RecordButton">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RecordButton.Elevation" parent="RecordButton">
        <item name="iconTint">@drawable/states_recorderbutton</item>
    </style>


    <style name="Theme.RedButtons" parent="MyTheme">
        <item name="colorOnSurface">@color/red_default</item>
    </style>

    <style name="Theme.BlackButtons" parent="MyTheme">
        <item name="colorOnSurface">@android:color/black</item>
    </style>

    <style name="RecordEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RecordAutoCompleteEditText" parent="Widget.MaterialComponents.AutoCompleteTextView.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="RecordTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

</resources>

